{
	"compilerOptions": {
		"target": "es2015",
		"jsx": "react",
		// TODO: When we can get jest to work well w/ JS files that use ESM we can set this to es2015
		"module": "commonjs",
		"noEmit": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"lib": ["esnext", "dom"],
		// TODO: Enable this piecemeal eventually
		// "strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictPropertyInitialization": true,
		"strictFunctionTypes": true,
		"strictNullChecks": false
	}
}
